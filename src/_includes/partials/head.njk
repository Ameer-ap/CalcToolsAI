<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# ✅ Dynamic Title #}
  <title>
    {% if title %}
      {{ title }} | {{ site.siteName }}
    {% else %}
      {{ site.siteName }} – Free AI-Powered Calculators
    {% endif %}
  </title>

  {# ✅ Meta description (fallback to site.description) #}
  <meta name="description" content="{{ description or site.description }}">

  {# ✅ Canonical URL #}
  <link rel="canonical" href="{{ page.url | absoluteUrl(site.url) }}">

  {# ✅ Open Graph Tags #}
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="{{ site.siteName }}">
  <meta property="og:title" content="{{ title or site.siteName }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:url" content="{{ page.url | absoluteUrl(site.url) }}">
  {% if ogImage %}
    <meta property="og:image" content="{{ ogImage | absoluteUrl(site.url) }}">
  {% endif %}

  {# ✅ Twitter Card #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or site.siteName }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  {% if ogImage %}
    <meta name="twitter:image" content="{{ ogImage | absoluteUrl(site.url) }}">
  {% endif %}

  <meta name="robots" content="index, follow">

  {# ✅ Styles & assets #}
  <link rel="preload" href="/assets/css/styles.css?v=1.2" as="style">
  <link rel="stylesheet" href="/assets/css/styles.css?v=1.2">
  <link rel="icon" type="image/svg+xml" href="/assets/img/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
  <link rel="apple-touch-icon" href="/assets/img/apple-touch-icon.png">
  <link rel="manifest" href="/assets/img/site.webmanifest">

  {# ✅ JSON-LD Structured Data for SEO #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "url": "{{ site.url }}",
    "name": "{{ site.siteName }}",
    "description": "{{ site.description }}",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "{{ site.url }}/?s={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "url": "{{ site.url }}",
    "name": "{{ site.siteName }}",
    "logo": "{{ '/assets/img/favicon-32x32.png' | absoluteUrl(site.url) }}"
  }
  </script>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ site.url }}/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ title or 'Page' }}",
        "item": "{{ page.url | absoluteUrl(site.url) }}"
      }
    ]
  }
  </script>

</head>
